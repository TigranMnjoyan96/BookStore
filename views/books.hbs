<h2>Books</h2>

{{#if books.length}}
    {{#each books}} 
        <div class="row">
    <div class="col s4">
      <div class="card">
        <div class="card-image">
          <img src="{{url}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{title}}</span>
          <p>{{price}}÷è</p>
        </div>
        <div class="card-action">
          <a href="/books/{{_id}}" target="blank">Book Link</a>
          <a href="/books/{{_id}}/edit?allow=true">Refactor Book</a>
          <form action="/cart/add" method="POST">
            <input type="hidden" name="_id" value="{{_id}}">
            <button type="submit" class="btn green">Buy</button>
          </form>
        </div>
      </div>
    </div>
  </div>
    {{/each }}
{{else }}
<strong>Books there is'nt yet</strong>
{{/if}}
